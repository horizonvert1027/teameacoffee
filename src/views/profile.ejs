<div id="root">
    <div class="alert-wrapper" style="top: -100px;"><div class="alert-content"></div></div>
    <div class="body-wrap" style="">
        <main class="main">
            <div class="middle-section ms-width">
                <div class="profile-wrapper">
                    <%- include('./common/topnav2') %>
                    <div class="post-header-wrapper back_sec"><div class="back_btn"><span class="middle-header-content"><%- profileuser.charAt(0).toUpperCase() + profileuser.slice(1) %> Profile</span></div></div>
                    <div class="profile-banner-wrapper">
                        <% if(user.json && user.json.profile && user.json.profile.cover_image){ %><img src="<%- user.json.profile.cover_image %>" alt="<%- user.name %>"><% }else{ %><img src="https://i.imgur.com/CAFy1oY.jpg" alt="<%- user.name %>"><% } %>
                    </div>
                    <div class="profile-details-wrapper">
                        <div class="profile-options">
                            <div class="profile-image-wrapper">
                                <% if(user.json && user.json.profile && user.json.profile.avatar){ %><img src="<%- user.json.profile.avatar %>" alt="<%- user.name %>"><% }else{ %><img src="https://i.imgur.com/iV7Sdgm.jpg" alt="<%- user.name %>"><% } %>
                            </div>
                            <div><% if(user.name == loguser) { %><button class="profile-edit-button" id="profile_edit">Edit profile</button><% }else{ %><% if((loguser) && followList.includes(loguser)) { %><button class="btn_unfollow_user" data-username="<%- user.name %>">Following</button><% }else{ %><button class="btn_follow_user" data-username="<%- user.name %>">Follow</button><% } } %>
                            </div>
                        </div>
                        <div class="profile-details-box">
                            <div class="profile-name">@<%- user.name %></div>
                            <div class="profile-username">
                                <div class="p_data_names">
                                    <ul class="usr-short-details">
                                        <li>
                                            <img src="https://img.icons8.com/ios-filled/10/1da1f2/lightning-bolt--v1.png"/><%-(user.balance)/1000000%><span>TMAC</span>
                                        </li> 
                                        <li>
                                            <img src="https://img.icons8.com/ios-filled/10/1da1f2/lightning-bolt--v1.png"/><% if(vp>mxVP){ %>16000<% }else{%><%-vp%><%} %><span>VP</span> 
                                        </li>
                                        <li>
                                            <img src="https://img.icons8.com/ios-filled/10/1da1f2/lightning-bolt--v1.png"/><% if(bw>mxBW){ %>64000<% }else{%><%-bw%><%} %><span >BW</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <% if(user.json && user.json.profile && user.json.profile.about){ %>
                            <div class="profile-bio"><%- user.json.profile.about %></div>
                            <% }else{} %>
                            <div class="profile-bio"></div>
                            <div class="profile-info-box">
                                <% if(user.json && user.json.profile && user.json.profile.location){ %>
